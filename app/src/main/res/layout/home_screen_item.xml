<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:background="@color/cardSurface"
    android:layout_margin="4dp"
    card_view:cardUseCompatPadding="true"
    android:clipToPadding="false"
    card_view:cardBackgroundColor="@color/cardSurface"
    card_view:cardElevation="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView

            android:id="@+id/menuItemImage"
            android:background="@color/primary300"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:padding="4dp"
            android:visibility="invisible"/>

        <LinearLayout
            android:id="@+id/sampleView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/amostraName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@id/amostraCode"
                    android:singleLine="true"
                    android:text=":NAME:"
                    android:textSize="16dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cód: " />
                    <TextView
                        android:id="@+id/amostraCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":CODE:"
                        android:textSize="11dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" / " />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Protc: " />
                    <TextView
                        android:id="@+id/amostraProcess"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":PROCESS:"
                        android:textSize="11dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lab.: " />
                    <TextView
                        android:id="@+id/amotraLab"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":LABORATORY:" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="bottom">

                <Button
                    android:id="@+id/amostraButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LIBERAR"
                    android:onClick="doRetirada"
                    android:theme="@style/AppTheme.SampleCardButton" />

                <ImageButton
                    android:id="@+id/amostraInfo"
                    style="@style/Widget.AppCompat.ImageButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/menu_ico_info"
                    android:text="RETIRADA"
                    android:theme="@style/AppTheme.SampleInfoCardButton"
                    android:backgroundTint="@color/analogous1_50"
                    android:elevation="@dimen/cardview_default_elevation"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/transportView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/transportItemFrom"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:layout_alignParentLeft="true"
                        android:layout_toLeftOf="@id/amostraCode"
                        android:singleLine="true"
                        android:text=":FROM:"
                        android:textSize="16dp" />
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:src="@drawable/menu_ico_from_to"
                        android:layout_gravity="bottom"/>
                    <TextView
                        android:id="@+id/transportItemTo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:layout_alignParentLeft="true"
                        android:layout_toLeftOf="@id/amostraCode"
                        android:singleLine="true"
                        android:text=":TO:"
                        android:textSize="16dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Protc: " />
                    <TextView
                        android:id="@+id/transportItemProtocol"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":PROCESS:"
                        android:textSize="11dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="/ Cód: " />
                        <TextView
                            android:id="@+id/transportItemCode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=":CODE:"
                            android:textSize="11dp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Data: " />
                    <TextView
                        android:id="@+id/transportItemDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":DATE:"
                        android:textSize="11dp" />
                </LinearLayout>
                <TextView
                    android:id="@+id/transportItemLab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":LABORATORY:"
                    android:visibility="gone"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="bottom">

                <Button
                    android:id="@+id/transportationButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="REALIZAR"
                    android:backgroundTint="@color/analogous2_50"
                    android:onClick="doTransport"/>
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/transportInfo"
                    android:src="@drawable/menu_ico_info"
                    android:theme="@style/AppTheme.TransportInfoCardButton"
                    android:backgroundTint="@color/analogous2_50"
                    android:elevation="@dimen/cardview_default_elevation"/>
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


</android.support.v7.widget.CardView>