<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:textColor">#101010</item>

        <item name="android:navigationBarColor">@color/analogous1</item>
    </style>

    <style name="AppTheme.NavigationView" parent="AppTheme">
        <item name="android:textColor">@color/onSurface</item>
        <item name="android:textColorPrimary">@color/onSurfaceIcon</item>
        <item name="android:textColorSecondary">@color/onSurface</item>
        <item name="android:textColorTertiary">@color/analogous2_700</item>
        <item name="android:background">@color/surface</item>
        <item name="android:itemTextAppearance">@color/complementary200</item>
    </style>

    <style name="AppTheme.SampleCardButton" parent="AppTheme">
        <item name="android:buttonStyle">
            @style/Widget.AppCompat.Button.Colored
        </item>
        <item name="colorAccent">@color/analogous1_50</item>
    </style>
    <style name="AppTheme.SampleInfoCardButton" parent="AppTheme">
        <item name="android:imageButtonStyle">
            @style/Widget.AppCompat.Button.Colored
        </item>
        <item name="colorAccent">@color/analogous1_50</item>
    </style>
    <style name="AppTheme.TransportCardButton" parent="AppTheme">
        <item name="android:buttonStyle">
            @style/Widget.AppCompat.Button.Colored
        </item>
        <item name="colorAccent">@color/analogous2_50</item>
    </style>
    <style name="AppTheme.TransportInfoCardButton" parent="AppTheme">
        <item name="android:imageButtonStyle">
            @style/Widget.AppCompat.Button.Colored
        </item>
        <item name="colorAccent">@color/analogous2_50</item>
    </style>

    <style name="spinner_style">
        <item name="android:dropDownWidth">fill_parent</item>
        <item name="android:dropDownHeight">fill_parent</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>
